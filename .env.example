# Copy to .env and adjust as needed

# Fuseki
FUSEKI_BASE_URL=http://localhost:3030
FUSEKI_DATASET=trustkb
FUSEKI_USER=admin
FUSEKI_PASS=change_me

# Ontology namespace
PHARM_NS=http://www.semanticweb.org/zanp/ontologies/2024/10/trust-management-system#

# Local node
RPC_URL=http://127.0.0.1:8545

# Contract address (auto-populated after deploy)
CONTRACT_ADDRESS=

# Use the first anvil key (default)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Namespace sourced from the ontology
NAMESPACE=http://example.org/trust#

# File locations
OWL_PATH=ontologies/pharma-trust.owl
POLICIES_DIR=policies
RESULTS_DIR=results

# Batch size when publishing on-chain
BATCH_SIZE=200

# Identity mode: URI or DID
IDENTITY_MODE=URI

# DID settings (used when IDENTITY_MODE=DID)
DID_ETHR_NETWORK=sepolia  # leave empty to target the default mainnet resolver
DID_ALLOW_NAMES_FALLBACK=true  # allow non-DID labels to fall back to namespace URIs

# Demo identities (update for your environment)
DEMO_EVALUATOR=did:ethr:0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266
DEMO_ENTITY=did:ethr:0x70997970C51812dc3A010C7d01b50e0d17dc79C8
